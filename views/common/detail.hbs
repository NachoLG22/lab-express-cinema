<div class="detail card mb-3" style="max-width: 600px, max-length : 350px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{movie.image}}" class="img-fluid rounded-start" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/movies">Go back</a>
        <br /><br />
        <h3 class="card-title">{{movie.title}}</h3>
        <h4 class="card-title">{{movie.director}}</h4>
        <h5>Stars</h5>
        <ul>
          {{#each movie.stars as |star|}}
            <li>{{star}}</li>
          {{/each}}
        </ul>
        <p class="card-text">{{movie.description}}</p>
        {{#each movie.showTimes as |showTime|}}
          <span>{{showTime}}</span>
          |
        {{/each}}
      </div>
    </div>

  </div>

</div>